#!/bin/sh

# settings for common commands
#alias ls="ls --color=auto"
#alias ll="ls -la --color=auto"
alias ls='eza --color=always --group-directories-first' # my preferred listing
alias ll='eza -a --color=always --group-directories-first'  # all files and dirs
alias la='eza -la --color=always --group-directories-first'  # long format
alias lt='eza -aT --color=always --group-directories-first' # tree listing
alias grep='grep --color=auto'
alias cp="cp -i"
alias mv="mv -i"
#alias rm="trash -v"
alias trash="trash -v"
alias cat="bat"
alias ocat="/bin/cat"
alias tree="tree -CAhF --dirsfirst"
alias treed="tree -CAFd"

# folder navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias cdc="cd $XDG_CONFIG_HOME"
alias cdcz="cd $XDG_CONFIG_HOME/zsh"
alias cdcn="cd $XDG_CONFIG_HOME/nvim"
alias cdd="cd $HOME/dotfiles"

# application aliases
alias vim="nvim"
alias nvim-test="XDG_CONFIG_HOME=~/projects/archinstall_build/nvim-build init.lua"
alias oneofetch="/usr/bin/neofetch"
alias neofetch="fastfetch"
alias za="zathura"
alias yayf="yay -Slq | fzf --multi --preview 'yay -Sii {1}' --preview-window=down:75% | xargs -ro yay -S"

# change default user shell
alias tobash="sudo chsh $USER -s /bin/bash && echo 'Log out and log back in for change to take effect.'"
alias tozsh="sudo chsh $USER -s /bin/zsh && echo 'Log out and log back in for change to take effect.'"

# system aliases
alias shut="shutdown"
alias suspend="systemctl suspend"
alias grub="sudo grub-mkconfig -o /boot/grub/grub.cfg"
alias update="yay -Syu;tldr --update;flatpak update"
